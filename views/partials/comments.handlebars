<div class="comments">
    {{#each this}}
    <div class="card">
        <h3 class="card-header"></h3>
        <section class="comment">
            <div class="text">
                {{comment_text}}
            </div>
            <div class="meta">
                {{user.username}}, {{created_at}}
            </div>
        </section>
    </div>
    {{/each}}
</div>